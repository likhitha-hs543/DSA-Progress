// LeetCode 169: Majority Element
// Approach: Boyerâ€“Moore Voting Algorithm
// Time: O(n)
// Space: O(1)

import java.util.*;
class Solution {
    public int majorityElement(int[] nums) {
        int candidate = 0;
        int count = 0;

        for(int num : nums){
            if(count == 0){
                candidate = num;
            }
            if(num == candidate){
                count++;
            }else{
                count--;
            }
        }return candidate;
    }
}
